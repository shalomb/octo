#!/bin/bash

set -eu

[[ ${DEBUG-} ]] && set -xv

: ${XDG_CACHE_HOME:="$HOME/.cache"}
projects_list="$XDG_CACHE_HOME/projects.list"

update=0
while getopts 'u' opt; do
  case "$opt" in
    u) update=1
      ;;
  esac
done
shift $((OPTIND -1))

git(){
  command git "$@" 2>/dev/null
}

projects_find() {
  find -L ~/* -iname ".git" |
    sed -r 's@/.git@@' |
    while read d; do
      dir="${d##$HOME}"
      dir="~$dir"
      if cd "$d"; then
        remotes=$(git remote -v | awk '/fetch/{ print $2 }')
        if [[ ${remotes-} ]]; then
          while read -r remote; do
            printf '%s\t%s\n' "$dir" "$remote"
          done <<< "$remotes"
        else
          printf '%s\t%s\n' "$dir" "$(git branch --show-current)"
        fi
      fi
    done
}

if (( update == 1 )) || [[ ! -e $projects_list ]]; then
  tmp=$(mktemp)
  trap "mv '$tmp' '$projects_list'" EXIT
  projects_find > "$tmp"
else
  cat "$projects_list"
fi
